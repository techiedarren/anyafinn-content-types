{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id":"https://raw.githubusercontent.com/techiedarren/anyafinn-content-types/master/content-types/blocks/split-block.json",

  "title": "Split Block",
  "description": "splits a media item and it's editorial into two separate side by side blocks",

  "allOf":[
    {
      "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type":"object",
  "properties":{

    "blockContent": {
      "title": "Block Content",
      "description": "select an image block to split into two blocks, one for the image and one for editorial",

      "allOf": [
        { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
        {
          "properties": {
            "contentType": {
              "title": "",
              "enum": [
                "https://raw.githubusercontent.com/techiedarren/anyafinn-content-types/master/content-types/blocks/image-block.json"
              ]
            }
          }
        }
      ]
    }

  },
  "propertyOrder": ["blockContent"]
}